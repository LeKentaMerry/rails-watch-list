<h1><%= @list.name %></h1>
<div class="container rows">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card">
      <p>
        <h4> <%= bookmark.movie.title %></h4>
        <%= bookmark.comment %>
      </p>
    </div>
  <% end %>
</div>
<h4>Add your bookmark</h4>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>

  <%= f.input :movie, collection: Movie.all %>
  <%= f.button :submit %>
<% end %>
