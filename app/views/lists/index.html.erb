<div class="container m-4 ">
  <h1>Your lists</h1>

  <% @lists.each do |list| %>
    <%= link_to list_path(list.id) do %>
    <div class="card-body">
      <h4>
        <%= list.name %>
      </h4>
    </div>
    <% end %>
  <% end %>

  <%= link_to "Create a new list", new_list_path, class:" btn btn-info" %>

</div>
